<% if aliases.any? -%>
server {
  listen 80;
  server_name<% aliases.each do |a| %> <%= a %><% end %>;
  rewrite ^ http://<%= domain %>$request_uri? permanent;
}

<% end -%>
<% if upstreams.any? -%>
upstream <%= name %> {
<% upstreams.each do |upstream| -%>
  server <%= upstream %> fail_timeout=0;
<% end -%>
}

<% end -%>
server {
<% if default_vhost -%>
  listen 80 default deferred;"
<% end -%>
  client_max_body_size 4G;
  server_name <%= domain %>;
  root <%= root %>;
  access_log  /var/log/nginx/<%= name %>.access.log;
  keepalive_timeout 5;
<% if mediaroot.any? -%>
  location = /favicon.ico {
    alias <%= absolute_mediaroot %>/favicon.ico;
    access_log off;
  }
  location <%= mediaprefix %> {
    alias <%= absolute_mediaroot %>;
    expires max;
    access_log off;
  }
<% end -%>

  location / {
<% if auth_basic -%>
    auth_basic            "Restricted";
    auth_basic_user_file  <%= auth_basic_user_file %>;
<% end -%>
<% if upstreams.any? -%>
    try_files $uri @<%= name %>;
<% else -%>
    index  index.html;
<% end -%>
<% if rewrite_missing_html_extension -%>
    try_files $uri $uri/ $uri.html =404;
<% end -%>
  }

<% if upstreams.any? -%>
  location @<%= name %> {
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header Host $http_host;
    proxy_redirect off;
    proxy_pass http://<%= name %>;
  }
<% end -%>
}
